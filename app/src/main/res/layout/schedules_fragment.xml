<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_color">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/schedules_tabLayout"
        android:layout_width="0dp"
        android:layout_height="41dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:tabTextColor="@color/gray_color1"
        app:tabSelectedTextColor="@color/black_color"
        app:tabIndicatorColor="#C922619C"
        app:tabIndicatorFullWidth="false"
        app:tabTextAppearance="@style/MineCustomTabText"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canceled" />
    </com.google.android.material.tabs.TabLayout>


    <FrameLayout
        android:id="@+id/schedulesFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedules_tabLayout"
        app:layout_constraintStart_toStartOf="@id/schedules_tabLayout"
        app:layout_constraintEnd_toEndOf="@id/schedules_tabLayout"
        android:layout_marginTop="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>